  main:
    parameters:

      input_artifact:
        description: "input artifact to be cleaned" ## ADD DESCRIPTION
        type: string

      output_artifact:
        description: "output artifact to be cleaned" ## ADD DESCRIPTION
        type: string

      output_type:
        description: "output type" ## ADD DESCRIPTION
        type: string

      output_description:
        description: "output description" ## ADD DESCRIPTION
        type: string

      min_price:
        description: "minimum valid price" ## ADD DESCRIPTION
        type: float

      max_price:
        description: "maximum valid price" ## ADD DESCRIPTION
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
